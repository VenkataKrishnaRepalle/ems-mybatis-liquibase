<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learning.emsmybatisliquibase.dao.EmployeeCycleDao">
    <resultMap id="employeeCycleStructure" type="com.learning.emsmybatisliquibase.entity.EmployeeCycle">
        <id property="uuid" column="uuid" jdbcType="VARCHAR" javaType="java.util.UUID"
            typeHandler="com.learning.emsmybatisliquibase.handler.UuidTypeHandler"/>
        <result property="employeeUuid" column="employee_uuid" jdbcType="VARCHAR" javaType="java.util.UUID"
                typeHandler="com.learning.emsmybatisliquibase.handler.UuidTypeHandler"/>
        <result property="cycleUuid" column="cycle_uuid" jdbcType="VARCHAR" javaType="java.util.UUID"
                typeHandler="com.learning.emsmybatisliquibase.handler.UuidTypeHandler"/>
        <result property="status" column="status"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
    </resultMap>

    <select id="getById" resultMap="employeeCycleStructure">
        select *
        from employee_cycle
        where uuid = #{uuid}
    </select>

    <insert id="insert" flushCache="true">
        INSERT INTO employee_cycle (uuid, employee_uuid, cycle_uuid, status, created_time, updated_time)
        VALUES (#{employeeCycle.uuid}, #{employeeCycle.employeeUuid}, #{employeeCycle.cycleUuid},
                #{employeeCycle.status}, current_timestamp, current_timestamp)
    </insert>

    <update id="update" flushCache="true">
        UPDATE employee_cycle
        SET employee_uuid = #{employeeCycle.employeeUuid},
            cycle_uuid    = #{employeeCycle.cycleUuid},
            status        = #{employeeCycle.status},
            updated_time  = current_timestamp
        where uuid = #{employeeCycle.uuid}
    </update>

    <select id="getByEmployeeIdAndCycleId" resultMap="employeeCycleStructure">
        select *
        from employee_cycle
        where employee_uuid = #{employeeUuid}
          and cycle_uuid = #{cycleUuid}
    </select>

    <select id="getByStatusAndCycleId" resultMap="employeeCycleStructure">
        select *
        from employee_cycle
        where status = #{status}
          and cycle_uuid = #{cycleUuid}
    </select>

    <select id="getByEmployeeIdAndStatus" resultMap="employeeCycleStructure">
        select *
        from employee_cycle
        where employee_uuid = #{employeeUuid}
          and status = #{status}
    </select>

    <select id="getByEmployeeId" resultMap="employeeCycleStructure">
        select *
        from employee_cycle
        where employee_uuid = #{employeeUuid}
    </select>
</mapper>